<div class=profile_new>
  <h2 class=profile>プロフィールを入力</h2>

  <%= form_with model: @profile, url:new_profile_path, local: true do |f| %>

    <div class="img-upload">
      <div class="weight-bold-text">
        登録画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>

    <div class="new-items">
      <div class="weight-bold-text">
        アカウント名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"profile-text", id:"name", placeholder:"アカウント名（企業様は担当者名）", maxlength:"40" %>
      <div class="profileexplain">
        <div class="weight-bold-text">
          商品の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :explanation, class:"profile-text", id:"explanation", placeholder:"自己PR（必須 1,000文字まで）（アカウントの特徴・集客経験の有無・案件単価）" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>

    <div class="items-detail">
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {class:"select-box", id:"category"}) %>
      </div>
    </div>

    <div class="insta-detail">
      <div class="insta-genedr">
      　男女比
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :insta_man, class:"gender-input", id:"insta_man", placeholder:"例）○○％" %>
      <%= f.text_field :insta_woman, class:"gender-input", id:"insta_woman", placeholder:"例）○○％" %>

      <div class="insta-age">
      　Instagram男女比
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :insta_age1, class:"age-input", id:"insta_age1", placeholder:"例）○○％" %>
      <%= f.text_field :insta_age2, class:"age-input", id:"insta_age2", placeholder:"例）○○％" %>
      <%= f.text_field :insta_age3, class:"age-input", id:"insta_age3", placeholder:"例）○○％" %>
      <%= f.text_field :insta_age4, class:"age-input", id:"insta_age4", placeholder:"例）○○％" %>
      <%= f.text_field :insta_age5, class:"age-input", id:"insta_age5", placeholder:"例）○○％" %>
      <%= f.text_field :insta_age6, class:"age-input", id:"insta_age6", placeholder:"例）○○％" %>
      <%= f.text_field :insta_age7, class:"age-input", id:"insta_age7", placeholder:"例）○○％" %>
    </div>

    <div class="youtube-detail">
      <div class="youtube-genedr">
      　Youtube男女比
        <span class="indispensable">任意</span>
      </div>
      <%= f.text_field :youtube_man, class:"gender-input", id:"youtube_man", placeholder:"例）○○％" %>
      <%= f.text_field :youtube_woman, class:"gender-input", id:"youtube_woman", placeholder:"例）○○％" %>

      <div class="youtube-age">
      　男年代別
        <span class="indispensable">任意</span>
      </div>
      <%= f.text_field :youtube_age1, class:"age-input", id:"youtube_age1", placeholder:"例）○○％" %>
      <%= f.text_field :youtube_age2, class:"age-input", id:"youtube_age2", placeholder:"例）○○％" %>
      <%= f.text_field :youtube_age3, class:"age-input", id:"youtube_age3", placeholder:"例）○○％" %>
      <%= f.text_field :youtube_age4, class:"age-input", id:"youtube_age4", placeholder:"例）○○％" %>
      <%= f.text_field :youtube_age5, class:"age-input", id:"youtube_age5", placeholder:"例）○○％" %>
      <%= f.text_field :youtube_age6, class:"age-input", id:"youtube_age6", placeholder:"例）○○％" %>
      <%= f.text_field :youtube_age7, class:"age-input", id:"youtube_age7", placeholder:"例）○○％" %>
    </div>

    <div class="viewing">
    　視聴継続率
    　　<span class="indispensable">任意</span>
       <%= f.text_field :viewing, class:"viewing-input", id:"viewing", placeholder:"例）○○％" %>
    </div>

    <div class="post-btn-contents">
      <%= f.submit "登録する" ,class:"post-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>

  <% end %>
</div>