<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<div class="profile-show">
  <div class="profile-box">
    <h2 class="name">
      <%= @profile.name %>
    </h2>

    <div class='profile-img-content'>
      <%= image_tag @profile.image.variant(resize:'500x500'), class: 'profile-image' if @profile.image.attached?%>
    </div>

    <div class='insta-detail-content'>
      <div class='insta-follower'>Instagramフォロワー
        <%=@profile.insta_follower%>
      </div>
      <div class='insta-gender'>男女比率
        <%=@profile.insta_man%>
        <%=@profile.insta_woman%>
      </div>
      <div class='insta-age'>年代比較
        <canvas id="myChart" width="100" height="30"></canvas>
        <%= render "shared/chart" %>
        <div class='age'>
          <%=@profile.insta_age1%>
        </div>
        <div class='age'>
          <%=@profile.insta_age2%>
        </div>
        <div class='age'>
          <%=@profile.insta_age3%>
        </div>
        <div class='age'>
          <%=@profile.insta_age4%>
        </div>
        <div class='age'>
          <%=@profile.insta_age5%>
        </div>
        <div class='age'>
          <%=@profile.insta_age6%>
        </div>
        <div class='age'>
          <%=@profile.insta_age7%>
        </div>
      </div>
    </div>

    <div class='youtube-detail-content'>
      <div class='youtube-follower'>Youtube登録者数
        <%=@profile.youtube_follower%>
      </div>
      <div class='youtube-gender'>男女比率
        <%=@profile.youtube_man%>
        <%=@profile.youtube_woman%>
      </div>
      <div class='youtube-age'>年代比較
        <div class='age'>
          <%=@profile.youtube_age1%>
        </div>
        <div class='age'>
          <%=@profile.youtube_age2%>
        </div>
        <div class='age'>
          <%=@profile.youtube_age3%>
        </div>
        <div class='age'>
          <%=@profile.youtube_age4%>
        </div>
        <div class='age'>
          <%=@profile.youtube_age5%>
        </div>
        <div class='age'>
          <%=@profile.youtube_age6%>
        </div>
        <div class='age'>
          <%=@profile.youtube_age7%>
        </div>
      </div>
      <div class='youtube-viewing'>
        <%=@profile.viewing%>
      </div>
    </div>

  </div>
</div>